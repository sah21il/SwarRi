<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

<body>
    <!-- Sidebar -->
    <%- include('./partials/sidebar.ejs') %>

    <!-- Main Content -->
    <div class="right">
        <!-- Form for Music Upload -->
        <h1 style="color: #5f94bd; font-family: system-ui; text-align: center;">Upload Your Music</h1>
        <form action="/music" method="POST" enctype="multipart/form-data" class="uploadform">

            <div class="uploadcard">
                <label for="uploadtitle" class="uploadtitle">Music Title</label>
                <input type="text" id="uploadtitle" name="title" placeholder="Enter Music Title" required>
            </div>

            <div class="uploadcard">
                <label for="uploaddescription" class="uploadtitle">Music Description</label>
                <textarea id="uploaddescription" name="description" rows="3" placeholder="Enter Music Description" required></textarea>
            </div>

            <div class="uploadcard">
                <label for="uploadartist" class="uploadtitle">Artist</label>
                <input type="text" id="uploadartist" name="artist" placeholder="Enter Artist Name">
            </div>

            <div class="uploadcard">
                <label for="uploadgenre" class="uploadtitle">Genre</label>
                <input type="text" id="uploadgenre" name="genre" placeholder="e.g., Rock, Jazz" required>
            </div>

            <div class="uploadcard">
                <label for="uploadtags" class="uploadtitle">Tags (comma-separated)</label>
                <input type="text" id="uploadtags" name="tags" placeholder="e.g., relaxing, instrumental">
            </div>

            <div class="uploadcard">
                <label for="uploadfile" class="uploadtitle">Upload Audio File</label>
                <input type="file" id="uploadfile" name="file" accept="audio/*" required>
            </div>

            <div class="uploadcard">
                <button type="submit" style="background-color: #5f94bd; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer;">Submit</button>
            </div>
        </form>
    </div>

</body>
</html>