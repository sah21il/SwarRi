<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify OTP</title>
    <!-- <link rel="stylesheet" href="/css/verify-otp.css"> -->
    <style>
        /* Optional: Add CSS styles for the error/success message */
        .message {
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
            text-align: center;
        }
        .error {
            color: #721c24;
        }
        .success {
            color: #155724;
        }
        /* General Reset */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Arial', sans-serif;
    /* background: linear-gradient(to right, #667eea, #764ba2); */
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    color: #333333;
}

/* Container */
.container {
    background: #ffffff;
    width: 90%;
    max-width: 400px;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    text-align: center;
}

/* Form Image Container */
.form-image-container {
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
}

.form-image {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
    /* border: 3px solid #667eea; */
}

/* OTP Input */
.otp-input {
    width: 100%;
    padding: 10px;
    font-size: 1rem;
    border: 1px solid #cccccc;
    border-radius: 5px;
    margin-bottom: 20px;
    transition: border-color 0.3s ease-in-out;
}

.otp-input:focus {
    border-color: #667eea;
    outline: none;
}

/* OTP Button */
.otp-button {
    width: 100%;
    padding: 10px;
    font-size: 1rem;
    background: #d1d1d1;
    color: #ffffff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease-in-out;
}

.otp-button:hover {
    background: #646464;
}

/* Message Styling */
.message {
    padding: 10px;
    margin-bottom: 15px;
    border-radius: 5px;
    font-size: 0.9rem;
}

.message.error {
    background: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
}

.message.success {
    background: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
}

/* Responsive Design */
@media (max-width: 768px) {
    .container {
        padding: 20px;
    }

    .otp-button, .otp-input {
        font-size: 0.9rem;
    }
}

    </style>
</head>
<body>
    <div class="container">
        <!-- Logo Section -->
        <!-- <div class="logo">
            <img src="/images/logo.png" alt="Workout Logo" class="logo-image">
        </div> -->

        <!-- Content Section -->
        <div class="content">
            <!-- Workout Image -->
            <!-- <div class="image-container">
                <img src="/images/image2.jpg" alt="Workout Image" class="workout-image">
            </div> -->

            <!-- OTP Form Section -->
            <form class="otp-form" action="/verify-otp" method="POST">
                <!-- Rounded Image -->
                <!-- <div class="form-image-container">
                    <img src="/images/progress-image.jpg" alt="Rounded Logo" class="form-image">
                </div> -->

                <!-- Display the message if it exists -->
                <% if (message) { %>
                    <p id="message" class="message <%= typeof messageType !== 'undefined' && messageType === 'error' ? 'error' : 'success' %>">
                        <%= message %>
                    </p>
                <% } %>
                
                <input type="text" name="otp" placeholder="Enter OTP" class="otp-input" required>
                <button type="submit" class="otp-button">Verify OTP</button>
            </form>
        </div>
    </div>

    <!-- JavaScript to auto-hide the message after 5 seconds -->
    <script>
        // Check if there's a message to hide
        window.onload = function() {
            const messageElement = document.getElementById('message');
            if (messageElement) {
                setTimeout(function() {
                    messageElement.style.display = 'none';
                }, 5000); // 5000 milliseconds = 5 seconds
            }
        };
    </script>
</body>
</html>
